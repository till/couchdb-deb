#! /bin/sh

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>

case "$1" in
    configure)

	SERVICE=couchdb
	COUCHDB_USER=couchdb
	LOG_DIR="/var/log/${SERVICE}"
	DATA_DIR="/var/lib/${SERVICE}"
	RUN_DIR="/var/run/${SERVICE}"

	echo "Adding CouchDB user"
	adduser --system --disabled-password --shell /bin/sh --group --home "${RUN_DIR}" --gecos "Apache CouchDB daemon" $COUCHDB_USER

	echo "Ensuring ${RUN_DIR} is present and owned by ${SERVICE}"
        test -d $RUN_DIR || mkdir $RUN_DIR
	chown -R $COUCHDB_USER $RUN_DIR

	echo "Ensuring ${LOG_DIR} is present and owned by ${SERVICE}"
	test -d $LOG_DIR || mkdir $LOG_DIR
        test -d "${LOG_DIR}/couch.log" || touch "${LOG_DIR}/couch.log"
	chown -R $COUCHDB_USER $LOG_DIR

	echo "Ensuring ${DATA_DIR} is present and owned by ${SERVICE}"
	test -d $DATA_DIR || mkdir $DATA_DIR
	chown -R $COUCHDB_USER $DATA_DIR

	# echo "Setting up custom config: 0.0.0.0"
	# echo '[httpd]
#bind_address = 0.0.0.0
#' > "/etc/${SERVICE}/local.d/apache-couchdb-deb.ini"

    ;;
    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
